<%- include("partials/header") %>

<form action="/shorten" method="POST">
  <input type="url" name="url" placeholder="Enter URL" required />
  <input type="text" name="shortcode" placeholder="Custom shortcode (optional)" />
  <button type="submit">Shorten</button>
</form>

<% if (error) { %>
  <p style="color: red;"><%= error %></p>
<% } %>

<% if (shortUrl) { %>
  <p>Your shortened URL: <a href="<%= shortUrl %>"><%= shortUrl %></a></p>
<% } %>

<h2>Recent Links</h2>
<ul>
  <% for (const [code, original] of Object.entries(links)) { %>
    <li><a href="http://<%= host %>/<%= code %>" target="_blank">
      <%= host %>/<%= code %></a> â†’ <%= original %>
    </li>
  <% } %>
</ul>
